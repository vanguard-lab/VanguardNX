# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build workspace`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t workspace`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system workspace && \
          adduser --system -G workspace workspace

COPY apps/workspace/dist workspace/
RUN chown -R workspace:workspace .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix workspace --omit=dev -f install

CMD [ "node", "workspace" ]
